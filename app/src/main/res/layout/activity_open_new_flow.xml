<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_root_view"
    android:paddingTop="24dp"
    android:orientation="vertical"
    android:background="@mipmap/demo_bg"
    tools:context="com.inveno.opensdk.android.OpenNewFlowActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/flow_activity"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/demo_title_bg"/>

    <com.inveno.opensdk.open.mvp.view.OpenNewFlowView
        android:id="@+id/open_new_flow_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">

    </com.inveno.opensdk.open.mvp.view.OpenNewFlowView>

    <include layout="@layout/layout_permission_loss" />

</LinearLayout>
